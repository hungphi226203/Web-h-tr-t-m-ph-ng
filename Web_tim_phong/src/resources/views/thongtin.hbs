<div class="post-container">
    <div class="dang-tin" style=" border: 2px solid rgb(21, 179, 247);border-radius:15px"
    style="background-color:rgb(255, 255, 255) ;border-radius: 15px;">
        <form action="/luuthongtin" method="get" id="mainForm" enctype="multipart/form-data">
            <h1 style="text-align: center;">Thông tin cá nhân</h1>
            <div class="">
                <div style="display:flex;gap:20px">
                    <input class="form-control" name="hovaten" placeholder="Họ và tên" style="width:50%" value="{{{user.fullname}}}"/>
                    <input class="form-control" name="cccd" placeholder="CCCD/CMND" style="margin-bottom:10px;width:50%" value="{{{user.id_card}}}"/>
                </div>
                <div style="display:flex;gap:20px">
                    <input class="form-control" name="sdt" placeholder="Số điện thoại" style="width:50%" value="{{{user.phone}}}"/>
                    <input class="form-control" name="email" placeholder="Email" style="margin-bottom:10px;width:50%"value="{{{user.email}}}"/>
                </div>
            </div>

            <div style="text-align:center; margin-top:20px">
                <button type="submit" form="mainForm" class="btn btn-danger" style="margin-top:10px">Lưu</button>
            </div>
        </form>
        <div style="text-align:center; margin-top:20px">
                <button class="btn btn-primary" onclick="togglePopup()"> Đổi mật khẩu </button> 
            </div>
    <div id="popupOverlay" class="overlay-container"> 
        <div class="popup-box"> 
            <h2 style="color: green;">Đổi mật khẩu</h2> 
            <form class="form-container" id="form-popup" action="/doimatkhau"> 
                <label class="form-label" for="oldpass" style="margin-bottom:-10px "> Mật khẩu cũ: </label> 
                <input class="form-input" type="password" 
                placeholder="Nhập mật khẩu cũ"  name="oldpass" required> 
  
                <label class="form-label" for="newpass"style="margin-bottom:-10px ">Mật khẩu mới:</label> 
                <input class="form-input"
                       type="password" 
                       placeholder="Nhập mật khẩu mới"
                        
                       name="newpass" required> 
                <button class="btn-submit" form="form-popup" type="submit"> Lưu </button> 
            
            <button type="button" class="btn-close-popup" 
                    onclick="togglePopup()"> 
              Đóng 
              </button> 
             </form>  
        </div> 
    </div> 
        
    </div>
  

